// Faça uma função que recebe por parâmetro um valor inteiro e positivo e retorna o valor lógico
// Verdadeiro caso o valor seja primo e Falso em caso contrário.

#include <stdio.h>

int ehPrimo(int numero) {
    if (numero <= 1) {
        return 0; // Números menores ou iguais a 1 não são primos
    }

    for (int i = 2; i * i <= numero; i++) {
        if (numero % i == 0) {
            return 0; // Encontrou um divisor, não é primo
        }
    }

    return 1; // Não encontrou divisores, é primo
}

int main() {
    int valor;

    printf("Digite um valor inteiro positivo: ");
    scanf("%d", &valor);

    if (ehPrimo(valor)) {
        printf("%d é primo.\n", valor);
    } else {
        printf("%d não é primo.\n", valor);
    }

    return 0;
}
