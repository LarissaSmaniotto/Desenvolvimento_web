// Faça um procedimento que recebe por parâmetro os valores necessário para o 
// cálculo da fórmula de báskara e retorna, também por parâmetro, as suas raízes, caso seja possível calcular.

#include <stdio.h>

void calcularBhaskara(double a, double b, double c, double *raiz1, double *raiz2) {
    double discriminante = (b * b) - (4 * a * c);

    if (discriminante >= 0) {
        *raiz1 = (-b + sqrt(discriminante)) / (2 * a);
        *raiz2 = (-b - sqrt(discriminante)) / (2 * a);
    } else {
        *raiz1 = *raiz2 = 0; // Define as raízes como 0 se o discriminante for negativo
    }
}

int main() {
    double a, b, c, raiz1, raiz2;

    printf("Digite os coeficientes a, b e c da equação quadrática (ax^2 + bx + c = 0):\n");
    scanf("%lf %lf %lf", &a, &b, &c);

    calcularBhaskara(a, b, c, &raiz1, &raiz2);

    if (raiz1 == 0 && raiz2 == 0) {
        printf("Não é possível calcular as raízes reais.\n");
    } else {
        printf("Raiz 1: %.2lf\n", raiz1);
        printf("Raiz 2: %.2lf\n", raiz2);
    }

    return 0;
}
