// Faça uma função que recebe por parâmetro o tempo de duração de uma fábrica
// expressa em segundos e retorna também por parâmetro esse tempo em horas,
// minutos e segundos

#include <stdio.h>

void converterTempo(int duracaoSegundos, int *horas, int *minutos, int *segundos) {
    *horas = duracaoSegundos / 3600; // 1 hora = 3600 segundos
    duracaoSegundos %= 3600;
    *minutos = duracaoSegundos / 60; // 1 minuto = 60 segundos
    *segundos = duracaoSegundos % 60;
}

int main() {
    int duracaoSegundos, horas, minutos, segundos;

    printf("Digite o tempo de duração da fábrica em segundos: ");
    scanf("%d", &duracaoSegundos);

    converterTempo(duracaoSegundos, &horas, &minutos, &segundos);

    printf("Tempo em horas: %d\n", horas);
    printf("Tempo em minutos: %d\n", minutos);
    printf("Tempo em segundos: %d\n", segundos);

    return 0;
}
