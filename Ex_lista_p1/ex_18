// Faça uma função que receba um valor inteiro e positivo e calcula o seu fatorial.]

#include <stdio.h>

// Função para calcular o fatorial de um valor inteiro positivo
unsigned long long calcularFatorial(int n) {
    // Verifica se o valor é positivo
    if (n < 0) {
        printf("O fatorial não está definido para números negativos.\n");
        return 0; // Retorna 0 em caso de entrada inválida
    }

    unsigned long long fatorial = 1; // Inicializa o fatorial com 1

    // Calcula o fatorial
    for (int i = 1; i <= n; i++) {
        fatorial *= i;
    }

    return fatorial;
}

int main() {
    int numero;

    printf("Digite um número inteiro positivo: ");
    scanf("%d", &numero);

    unsigned long long resultado = calcularFatorial(numero);

    if (resultado > 0) {
        printf("O fatorial de %d é: %llu\n", numero, resultado);
    }

    return 0;
}
