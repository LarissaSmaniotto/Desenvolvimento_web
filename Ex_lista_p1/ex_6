// Faça uma função que recebe a idade de uma pessoa em anos, meses e dias e
// retorna essa idade expressa em dias.

#include <stdio.h>

    int calcularIdadeEmDias(int anos, int meses, int dias) {
        // Número médio de dias em um mês
        int diasPorMes[] = {0, 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
    
        // Verifica se o ano é bissexto (fevereiro tem 29 dias)
        if ((anos % 4 == 0 && anos % 100 != 0) || anos % 400 == 0) {
            diasPorMes[2] = 29;
        }
    
        int idadeEmDias = 0;
    
        // Adiciona dias dos anos completos
        idadeEmDias += anos * 365;
    
        // Adiciona dias dos meses completos
        for (int i = 1; i <= meses; i++) {
            idadeEmDias += diasPorMes[i];
        }
    
        // Adiciona dias restantes
        idadeEmDias += dias;
    
        return idadeEmDias;
    }
    
    int main() {
        int anos, meses, dias;
        printf("Informe a idade em anos, meses e dias (separados por espaços): ");
        scanf("%d %d %d", &anos, &meses, &dias);
    
        int idadeEmDias = calcularIdadeEmDias(anos, meses, dias);
    
        printf("A idade em dias é: %d dias\n", idadeEmDias);
    
        return 0;
    }
    