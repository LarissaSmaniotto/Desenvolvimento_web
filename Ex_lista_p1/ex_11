// Faça uma função que recebe a média final de um aluno por parãmetro e retorna o
// seu conceito, conforme a tabela abaixo:
// Nota Conceito
// e 0,0 a 4,9 D
// de 5,0 a 6,9 C
// de 7,0 a 8,9 B
// de 9,0 a
// 10,0 A


#include <stdio.h>

// Função para determinar o conceito com base na média final
char determinarConceito(float media) {
    if (media >= 0.0 && media <= 4.9) {
        return 'D';
    } else if (media >= 5.0 && media <= 6.9) {
        return 'C';
    } else if (media >= 7.0 && media <= 8.9) {
        return 'B';
    } else if (media >= 9.0 && media <= 10.0) {
        return 'A';
    } else {
        return 'N'; // Retorna 'N' para valores fora do intervalo especificado
    }
}

int main() {
    float media;
    char conceito;

    printf("Digite a média final do aluno: ");
    scanf("%f", &media);

    conceito = determinarConceito(media);

    if (conceito == 'N') {
        printf("Média fora do intervalo especificado.\n");
    } else {
        printf("Conceito: %c\n", conceito);
    }

    return 0;
}
